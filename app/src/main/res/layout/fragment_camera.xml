<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CameraFragment">

    <androidx.camera.view.PreviewView
        android:id="@+id/viewFinder"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/capturedImageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitCenter"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:src="@tools:sample/backgrounds/scenic" />

    <!-- Input Layout: Magasin and Reference (horizontal, more compact, adjusted sizes) -->
    <LinearLayout
        android:id="@+id/inputLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="#80000000"
        android:gravity="center_vertical"
        android:visibility="visible"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/magasin_label"
            android:textColor="@android:color/white"
            android:textSize="14sp"
        android:layout_marginEnd="4dp"/>

        <EditText
            android:id="@+id/magasinNameEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:inputType="textCapCharacters|numberSigned"
            android:imeOptions="actionNext"
            android:maxLength="4"
            android:textColor="@android:color/white"
            android:backgroundTint="@android:color/white"
            android:maxLines="1"
            android:textSize="14sp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_marginEnd="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reference_label"
            android:textColor="@android:color/white"
            android:textSize="14sp"
        android:layout_marginEnd="4dp"/>

        <EditText
            android:id="@+id/referenceNameEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"
            android:inputType="number"
            android:imeOptions="actionDone"
            android:maxLength="10"
            android:textColor="@android:color/white"
            android:backgroundTint="@android:color/white"
            android:maxLines="1"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:textSize="14sp"/>
    </LinearLayout>

    <!-- Buttons for Camera State (Only Capture) -->
    <LinearLayout
        android:id="@+id/camera_buttons_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="16dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Removed newSessionButton from here -->

        <Button
            android:id="@+id/imageCaptureButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/capture_photo"
            android:paddingStart="32dp"
            android:paddingEnd="32dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:backgroundTint="@color/material_dynamic_primary_container"
            android:textColor="@android:color/white"
            android:elevation="4dp"
            android:stateListAnimator="@null"
            android:translationZ="4dp"
            android:outlineProvider="background"
            android:outlineSpotShadowColor="@color/material_dynamic_primary_container"
            android:outlineAmbientShadowColor="@color/material_dynamic_primary_container"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>

    <!-- Buttons for Image Review State (Send and Retake) -->
    <LinearLayout
        android:id="@+id/review_buttons_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="16dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/retakeImageButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/retake"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/sendImageButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/send" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/loadingOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminateTint="@android:color/white" />

        <TextView
            android:id="@+id/loadingTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="200dp"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            tools:text="Loading..." />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>